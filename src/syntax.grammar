@top Program { expression* }

@skip { breakline }

expression {
  CommandRange |
  CommandSplit |
  Event
}

CommandRange { '> ' Range ' ' Time }
CommandSplit { '> ' Split ' ' Time }

Event { Time ' ' Title }

@tokens {
  week { $[1-7] }

  Range { week '-' week }
  Split { (week ','?) week? }

  twoDigits { @digit @digit? }
  hours { twoDigits 'h' }
  minutes { twoDigits 'm'  }

  Time { hours | minutes | hours twoDigits 'm'? }
  Title { ![\n]+ }

  breakline { '\n' }
}

@detectDelim
